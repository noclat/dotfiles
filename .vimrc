syntax on
set number
set encoding=utf-8
set fileencoding=utf-8
set expandtab       " use spaces instead of tabs
set autoindent      " autoindent based on line above, works most of the time
set smartindent     " smarter indent for C-like languages
set shiftwidth=2    " when reading, tabs are 4 spaces
set softtabstop=2   " in insert mode, tabs are 4 spaces
set backspace=indent,eol,start " delete over line breaks & indents
set fileformat=unix " unix line endings
set fileformats=unix,dos " force unix line endings
set mouse=a " enable mouse scrolling (hold shift/option while selecting to copy out of vim)
